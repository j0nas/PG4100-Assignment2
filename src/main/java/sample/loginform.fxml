<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:controller="sample.Controller"
          fx:id="mainbody">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25"></Insets>
    </padding>

    <stylesheets>
        <URL value="@Login.css"></URL>
    </stylesheets>

    <Text GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" text="Welcome" fx:id="header"></Text>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Username:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"></TextField>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Username:"></Label>
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2"></PasswordField>

    <HBox GridPane.columnIndex="1" GridPane.rowIndex="3" alignment="BOTTOM_RIGHT" spacing="10">
        <Button onAction="#handleSubmitButtonAction" text="Sign in"></Button>
    </HBox>

    <Text GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="actiontarget"></Text>
</GridPane>
